<% actionHelper=(linkPrefix)=> {

    let actions = [
        {value: "",name: "Bulk Action"},
        {value: "changeStatus/active",name: "Active"},
        {value: "changeStatus/inactive",name: "InActive"},
        {value: "changeOrdering",name: "Change Ordering"},
        {value: "delete",name: "Delete"},
    ]
    let xthmlAction = "";
    let linkAddNew = linkPrefix + 'form';

    actions.forEach((action) => {
        let link = linkPrefix + action.value;
        xthmlAction += `<option value="${link}">${action.name}</option>`
    })

    return `
    <div class="zcontrols">
        <select name="action" class="form-control slbAction">
            ${xthmlAction}
        </select>
        <button class="btn btn-info btnAction" type="button" id="btn-action" value="btnAction" disabled>Apply</button>
        <div class="pull-right">
            <a href="${linkAddNew}" class="btn btn-warning btn-addNew">Add
                New
            </a>
        </div>
    </div>
    `;
    }
    %>